extends ../layout/index
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Punto
            span.font-normal Inmobiliario
        h2.text-center.text-2xl.font-extrabold= pagina 
        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(method= "POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div.space-y-3
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="nombre") Nombre: 
                        input#nombre.w-full.px-3.py-2.border.gray-200.rounded-md.placeholder-gray-400(placeholder="Ingresa tu nombre" type="text" name="nombre" value = usuario ? usuario.nombre : '')
                        div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Correo: 
                        input#email.w-full.px-3.py-2.border.gray-200.rounded-md.placeholder-gray-400(placeholder="Correo electronico" type="email" name="email" value = usuario ? usuario.email : '')
                        div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="password") Contraseña: 
                        input#password.w-full.px-3.py-2.border.gray-200.rounded-md.placeholder-gray-400(placeholder="Ingresa una contraseña" type="password" name="password")
                        div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="repetirpassword") Repite tu contraseña: 
                        input#repetirpassword.w-full.px-3.py-2.border.gray-200.rounded-md.placeholder-gray-400(placeholder="Repite tu contraseña" type="password" name="repetirpassword")
                       
                        .flex.items-center.justify-between
                            a.text-gray-400.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia sesión
                            a.text-gray-400.text-xs(href="/auth/password-reset")  Olvidé mi contraaseña
                        input(class="w-full bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")