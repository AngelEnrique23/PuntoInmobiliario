extends ../layout/index
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Punto
            span.font-normal Inmobiliario
        h2.text-center.text-2xl.font-extrabold= pagina 

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md
            .bg-whithe.py-8.px-4.shadow
                form(method= "POST"  action="/auth/password-reset")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div.space-y-3
                        div 
                        label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold(for="email") Correo: 
                        input#email.w-full.px-3.py-2.border.gray-200.rounded-md.placeholder-gray-400(placeholder="Correo electronico" type="email" name="email")
                        div.flex.items-center.justify-between
                            a.text-gray-400.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia sesión
                            a.text-gray-400.text-xs(href="/auth/registro") ¿No tienes cuenta? Crea una
                        input(class="w-full bg-indigo-600 hover:bg-indigo-500 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar instrucciones")